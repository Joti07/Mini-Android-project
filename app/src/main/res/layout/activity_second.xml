<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    tools:context=".secondActivity">

    <ImageView
        android:id="@+id/bus"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="115dp"
        android:onClick="spinBus"
        android:src="@drawable/i2"
        />
    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:textSize="20dp"
            android:layout_x="100dp"
            android:layout_y="420dp"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold"
            android:text="click here to a tour"/>


        <Button
            android:id="@+id/enterbt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/wheel"
            android:layout_centerInParent="true"
            android:text="ENTER"
            android:layout_x="120dp"
            android:layout_y="125dp"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp"
            android:textStyle="bold"


            />


            />

    </AbsoluteLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="AUST BUS ROUTE"
        android:textSize="40dp"
        android:textStyle="bold"
        android:paddingTop="50dp"
        android:paddingLeft="13dp"
        android:gravity="fill_horizontal"

        />




</RelativeLayout>

